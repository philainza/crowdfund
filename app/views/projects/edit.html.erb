<%= form_for(@project) do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field  :name %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :target_pledge_amount %><br/>
    <%= f.number_field :target_pledge_amount %>
  </p>
  <p>
    <%= f.label :pledging_ends_on %><br/>
    <%= f.date_field :pledging_ends_on %>
  </p>
  <p>
    <%= f.label :website %><br/>
    <%= f.url_field :website %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>